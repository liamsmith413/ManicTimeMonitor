<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:av="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="av"
    x:Class="ManicTimeMonitor.MainWindow"
    Title="ManicTime Monitor"
    Height="32"
    Width="375"
    WindowStartupLocation="CenterScreen"
    Background="Transparent"
    AllowsTransparency="True"
    Topmost="True"
    ShowInTaskbar="False"
    WindowStyle="None"
    ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="MonitorTextBlock" TargetType="{x:Type TextBlock}">
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4,0"/>
            <Setter Property="FontFamily" Value="Cascadia Code"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Ideal"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>
    </Window.Resources>

    <Window.ContextMenu>
        <ContextMenu Background="#252525" BorderBrush="#333333">
            <MenuItem Header="Opacity" Foreground="#E5E5E5">
                <MenuItem Header="100%" Tag="1.0" Click="Opacity_Click" Foreground="#E5E5E5"/>
                <MenuItem Header="75%" Tag="0.75" Click="Opacity_Click" Foreground="#E5E5E5"/>
                <MenuItem Header="50%" Tag="0.5" Click="Opacity_Click" Foreground="#E5E5E5"/>
                <MenuItem Header="25%" Tag="0.25" Click="Opacity_Click" Foreground="#E5E5E5"/>
            </MenuItem>
            <MenuItem Header="Always on Top"
                      IsCheckable="True"
                      IsChecked="True"
                      Click="AlwaysOnTop_Click"
                      Foreground="#E5E5E5"/>
            <Separator Background="#333333"/>
            <MenuItem Header="Exit"
                      Click="ExitMenuItem_Click"
                      Foreground="#E5E5E5"/>
        </ContextMenu>
    </Window.ContextMenu>

    <Border Background="#1E1E1E"
            CornerRadius="16"
            BorderBrush="#333333"
            BorderThickness="1"
            MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <!-- Progress Background -->
            <Border x:Name="ProgressBackground"
                    Background="#2B3344"
                    CornerRadius="16"
                    HorizontalAlignment="Left"
                    Width="0"/>

            <Grid Margin="10,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <!-- CPU Label -->
                    <ColumnDefinition Width="40"/>
                    <!-- CPU Value -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- • -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- RAM Label -->
                    <ColumnDefinition Width="50"/>
                    <!-- RAM Value -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- • -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- STATUS -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- • -->
                    <ColumnDefinition Width="Auto"/>
                    <!-- TIME Label -->
                    <ColumnDefinition Width="60"/>
                    <!-- TIME Value -->
                </Grid.ColumnDefinitions>

                <!-- CPU -->
                <TextBlock Text="CPU" Grid.Column="0" Style="{StaticResource MonitorTextBlock}" Foreground="#7A7A7A"/>
                <TextBlock x:Name="CpuUsageTextBlock"
                           Grid.Column="1"
                           Text="0%"
                           TextAlignment="Right"
                           Style="{StaticResource MonitorTextBlock}"
                           Foreground="#E5E5E5"/>

                <!-- • -->
                <TextBlock Grid.Column="2"
                           Text="•"
                           Style="{StaticResource MonitorTextBlock}"
                           Foreground="#3D3D3D"/>

                <!-- RAM -->
                <TextBlock Grid.Column="3" Text="RAM" Style="{StaticResource MonitorTextBlock}" Foreground="#7A7A7A"/>
                <TextBlock x:Name="RamUsageTextBlock"
                           Grid.Column="4"
                           Text="0 GB"
                           TextAlignment="Right"
                           Style="{StaticResource MonitorTextBlock}"
                           Foreground="#E5E5E5"/>

                <!-- • -->
                <TextBlock Grid.Column="5"
                           Text="•"
                           Style="{StaticResource MonitorTextBlock}"
                           Foreground="#3D3D3D"/>

                <!-- Status -->
                <TextBlock x:Name="StatusTextBlock"
                           Grid.Column="6"
                           Text="Unknown"
                           Style="{StaticResource MonitorTextBlock}"
                           Foreground="#00FF00"/>

                <!-- • -->
                <TextBlock Grid.Column="7"
                           Text="•"
                           Style="{StaticResource MonitorTextBlock}"
                           Foreground="#3D3D3D"/>

                <!-- TIME -->
                <TextBlock Grid.Column="8" Text="TIME" Style="{StaticResource MonitorTextBlock}" Foreground="#7A7A7A"/>
                <TextBlock x:Name="ActiveTimeTextBlock"
                           Grid.Column="9"
                           Text="0h 0m"
                           TextAlignment="Left"
                           Style="{StaticResource MonitorTextBlock}"
                           Foreground="#E5E5E5"/>
            </Grid>
        </Grid>
    </Border>
</Window>
